# BitChange Pro - VPS Standalone Configuration
# Copy this to .env on your VPS and configure the values

# Database
DATABASE_URL="mysql://bitchange:YOUR_DB_PASSWORD@localhost:3306/bitchange_pro"

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET="YOUR_RANDOM_SECRET_HERE"

# OAuth (not used in standalone, but required by code)
VITE_APP_ID="standalone"
OAUTH_SERVER_URL="http://localhost:3000"
OWNER_OPEN_ID="admin"

# Forge API (not used in standalone, but required by code)
BUILT_IN_FORGE_API_URL="http://localhost:3000"
BUILT_IN_FORGE_API_KEY="standalone"

# Node Environment
NODE_ENV="production"
